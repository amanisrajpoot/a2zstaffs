---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';
import Icon from '../components/Icon.astro';
---

<BaseLayout title="For Candidates — A2Z Digital Workforce">
  <Hero
    title="Advance your career with the A2Z Digital Workforce network"
    subtitle="Collaborate with high-growth product teams, customer experience pods, and innovation labs across industries—while we back you with coaching, upskilling, and long-term career design."
    primaryCTA={{ text: "Browse opportunities", href: "/jobs" }}
    secondaryCTA={{ text: "Submit your profile", href: "#apply" }}
    background="gradient"
  />

  <!-- Why Join Us -->
  <Section>
    <div class="container">
      <div class="mx-auto mb-12 max-w-3xl text-center">
        <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)]">
          Why join our talent network
        </h2>
        <p class="mt-4 text-lg text-[var(--text-muted)]">
          We represent innovators building the future of tech, CX, and business operations—and we stay with you well beyond your first offer.
        </p>
      </div>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {[
          {
            icon: 'target',
            title: 'Precise role matching',
            desc: 'We align your strengths, ambitions, and preferred ways of working with programs where you’ll thrive.',
          },
          {
            icon: 'handshake',
            title: 'Career co-pilots',
            desc: 'Dedicated talent partners coach you through interviews, negotiations, and continuous progression.',
          },
          {
            icon: 'chart',
            title: 'Future-ready growth',
            desc: 'Gain access to learning sprints, community events, and cross-domain opportunities across our client network.',
          },
        ].map(({ icon, title, desc }) => (
          <Card class="text-center">
            <div class="mb-4 flex justify-center text-[var(--primary)]">
              <Icon name={icon} class="w-10 h-10" />
            </div>
            <h3 class="text-xl font-semibold mb-3 text-[var(--text-secondary)] dark:text-white">{title}</h3>
            <p class="text-sm text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">{desc}</p>
          </Card>
        ))}
      </div>
    </div>
  </Section>

  <!-- Candidate Journey -->
  <Section background="secondary">
    <div class="container">
      <div class="mx-auto mb-12 max-w-3xl text-center">
        <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)] dark:text-white">
          Your journey with A2Z
        </h2>
      </div>
      <div class="grid grid-cols-1 gap-6 md:grid-cols-4">
          {[
            { step: '01', title: 'Discover', desc: 'Share your profile, work preferences, and the kind of impact you want to create.' },
            { step: '02', title: 'Curate', desc: 'We shortlist opportunities across product, experience, and leadership tracks aligned to your goals.' },
            { step: '03', title: 'Elevate', desc: 'Interview coaching, skill refreshers, and mock sessions ensure you show up with confidence.' },
            { step: '04', title: 'Thrive', desc: 'Join a community that supports onboarding, upskilling, and new challenges as you grow.' },
          ].map(({ step, title, desc }) => (
          <Card class="h-full text-center">
            <div class="mx-auto mb-4 inline-flex h-12 w-12 items-center justify-center rounded-full bg-[rgba(29,78,216,0.12)] text-sm font-semibold uppercase tracking-[0.3em] text-[var(--primary)]">
              {step}
            </div>
            <h3 class="text-lg font-semibold text-[var(--text-secondary)] dark:text-white">{title}</h3>
            <p class="mt-3 text-sm text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">{desc}</p>
          </Card>
        ))}
      </div>
    </div>
  </Section>

  <!-- Benefits -->
  <Section>
    <div class="container">
      <div class="mx-auto mb-12 max-w-3xl text-center">
        <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)]">
          What you get as an A2Z consultant
        </h2>
      </div>
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
          {[
            'Access to exclusive product, experience, and leadership roles across industries',
            'Dedicated talent partner and interview coaching for every opportunity',
            'Compensation benchmarking and negotiation support with total rewards guidance',
            'Upskilling pathways, mentorship circles, and certification sponsorships',
            'Early visibility into contract-to-hire and global relocation programs',
            'Community events, wellness initiatives, and referral bonuses',
          ].map((benefit) => (
          <Card>
            <div class="flex items-start gap-3">
              <Icon name="check" class="mt-1 h-4 w-4 text-[var(--secondary)]" />
              <p class="text-sm text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">{benefit}</p>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </Section>

  <!-- Application Form -->
  <Section background="secondary" id="apply">
    <div class="container">
      <div class="mx-auto max-w-2xl">
        <div class="text-center mb-8">
          <h2 class="text-3xl md:text-4xl font-semibold mb-4 text-[var(--text-secondary)] dark:text-white">
            Submit your profile
          </h2>
          <p class="text-lg text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">
            Tell us about your experience and ambitions—we’ll connect you with squads that match.
          </p>
        </div>
        <Card>
          <form name="candidate-application" method="POST" action="https://formspree.io/f/YOUR_FORM_ID" enctype="multipart/form-data" class="space-y-6">
            <input type="hidden" name="form-name" value="candidate-application" />

            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
              <div>
                <label for="firstName" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                  First Name *
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                  Last Name *
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Phone Number *
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              />
            </div>

            <div>
              <label for="experience" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Years of experience *
              </label>
              <select
                id="experience"
                name="experience"
                required
                class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              >
                <option value="">Select experience</option>
                <option value="0-1">0-1 years</option>
                <option value="2-5">2-5 years</option>
                <option value="6-10">6-10 years</option>
                <option value="10+">10+ years</option>
              </select>
            </div>

            <div>
              <label for="skills" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Key skills *
              </label>
              <input
                type="text"
                id="skills"
                name="skills"
                required
                placeholder="e.g., React, Data Engineering, Customer Success, Finance Ops"
                class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              />
            </div>

            <div>
              <label for="roleType" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Preferred engagement *
              </label>
              <select
                id="roleType"
                name="roleType"
                required
                class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              >
                <option value="">Select preference</option>
                <option value="permanent">Permanent / full-time</option>
                <option value="contract">Contract / project-based</option>
                <option value="bot">Build-operate-transfer</option>
                <option value="open">Open to any</option>
              </select>
            </div>

            <div>
              <label for="resume" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Upload resume *
              </label>
              <input
                type="file"
                id="resume"
                name="resume"
                accept=".pdf,.doc,.docx"
                required
                class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 file:mr-4 file:rounded-lg file:border-0 file:bg-[rgba(29,78,216,0.08)] file:px-4 file:py-2 file:text-sm file:font-semibold file:text-[var(--primary)] hover:file:bg-[rgba(29,78,216,0.15)] dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              />
            </div>

            <div>
              <label for="coverLetter" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Tell us more (optional)
              </label>
              <textarea
                id="coverLetter"
                name="coverLetter"
                rows="4"
                placeholder="Share your ideal next role, preferred industries, location flexibility, or notice period."
                class="w-full resize-none rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              ></textarea>
            </div>

            <Button type="submit" variant="primary" size="lg" class="w-full">
              Submit application
            </Button>
          </form>
        </Card>
      </div>
    </div>
  </Section>
</BaseLayout>