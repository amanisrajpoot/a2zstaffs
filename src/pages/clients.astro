---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';
import Icon from '../components/Icon.astro';
---

<BaseLayout title="For Clients — A2Z Digital Workforce">
  <Hero
    title="Build agile IT, BPO, and staffing solutions with a single partner"
    subtitle="Plug into cross-functional squads, CX pods, and embedded talent teams that flex with demand—without compromising governance or speed."
    primaryCTA={{ text: "Request a delivery pod", href: "#request" }}
    secondaryCTA={{ text: "Explore engagement models", href: "#services" }}
    background="gradient"
  />

  <!-- Why Choose A2Z -->
  <Section id="services">
    <div class="container">
      <div class="mx-auto mb-12 max-w-3xl text-center">
        <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)]">
          Why digital leaders trust A2Z
        </h2>
        <p class="mt-4 text-lg text-[var(--text-muted)]">
          Whether you’re scaling a product roadmap, standing up CX operations, or hiring niche talent, we deliver with speed and transparency.
        </p>
      </div>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {[
          {
            icon: 'rocket',
            title: 'Launch-ready pods',
            desc: 'Product squads, CX desks, and talent teams stood up in weeks, powered by reusable playbooks.',
          },
          {
            icon: 'chart',
            title: 'Outcome governance',
            desc: 'Dashboards, OKRs, and executive reviews aligned to your KPIs keep delivery on course.',
          },
          {
            icon: 'handshake',
            title: 'True partnership',
            desc: 'Flexible engagement models—managed services, embedded squads, BOT—designed around your goals.',
          },
        ].map(({ icon, title, desc }) => (
          <Card class="text-center">
            <div class="mb-4 flex justify-center text-[var(--primary)]">
              <Icon name={icon} class="w-10 h-10" />
            </div>
            <h3 class="text-xl font-semibold mb-3 text-[var(--text-secondary)] dark:text-white">{title}</h3>
            <p class="text-sm text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">{desc}</p>
          </Card>
        ))}
      </div>
    </div>
  </Section>

  <!-- Engagement Process -->
  <Section background="secondary">
    <div class="container">
      <div class="mx-auto mb-12 max-w-3xl text-center">
        <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)] dark:text-white">
          A proven, transparent engagement journey
        </h2>
      </div>
      <div class="grid grid-cols-1 gap-6 md:grid-cols-4">
        {[
          { step: '01', title: 'Discover', desc: 'Align on business objectives, current-state maturity, and expected outcomes with our solution architects.' },
          { step: '02', title: 'Design', desc: 'Co-create delivery plans, pod compositions, and toolchain integrations within 2-4 weeks.' },
          { step: '03', title: 'Deliver', desc: 'Execute sprints, SLAs, and staffing fulfilment with shared dashboards and weekly governance.' },
          { step: '04', title: 'Optimize', desc: 'Layer in automation, analytics, and continuous improvement to compound value.' },
        ].map(({ step, title, desc }) => (
          <Card class="h-full text-center">
            <div class="mx-auto mb-4 inline-flex h-12 w-12 items-center justify-center rounded-full bg-[rgba(29,78,216,0.12)] text-sm font-semibold uppercase tracking-[0.3em] text-[var(--primary)]">
              {step}
            </div>
            <h3 class="text-lg font-semibold text-[var(--text-secondary)] dark:text-white">{title}</h3>
            <p class="mt-3 text-sm text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">{desc}</p>
          </Card>
        ))}
      </div>
    </div>
  </Section>

  <!-- Services for Clients -->
  <Section>
    <div class="container">
      <div class="mx-auto mb-12 max-w-3xl text-center">
        <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)]">
          Engage us across the digital operations lifecycle
        </h2>
      </div>
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        {[
          {
            title: 'Product & platform squads',
            items: ['Full-stack engineering, QA, and UX pods', 'Platform modernization & integration teams', 'DevSecOps and SRE managed services'],
          },
          {
            title: 'CX & BPM operations',
            items: ['Omnichannel support desks with WFM & QA', 'Finance, procurement, and knowledge process pods', 'Analytics, RPA, and continuous improvement'],
          },
          {
            title: 'Talent ecosystems',
            items: ['Embedded RPO pods for volume & niche hiring', 'BOT and contract staffing for rapid scale-ups', 'Leadership hiring and workforce planning'],
          },
          {
            title: 'Advisory & enablement',
            items: ['Operating model design and PMO support', 'Toolchain and automation assessments', 'Capability building & change management'],
          },
          {
            title: 'Compliance & governance',
            items: ['ISO, SOC, and data security aligned processes', 'Risk management and business continuity plans', 'Quarterly strategic reviews with CXOs'],
          },
          {
            title: 'Transition & transformation',
            items: ['Lift-and-shift of legacy operations', 'Greenfield delivery center setup', 'Optimization roadmaps with ROI tracking'],
          },
        ].map(({ title, items }) => (
          <Card>
            <h3 class="text-xl font-semibold text-[var(--text-secondary)] dark:text-white">{title}</h3>
            <ul class="mt-4 space-y-3 text-sm text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">
              {items.map((item) => (
                <li class="flex gap-2">
                  <Icon name="check" class="h-4 w-4 flex-none text-[var(--secondary)]" />
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </Card>
        ))}
      </div>
    </div>
  </Section>

  <!-- Request Talent Form -->
  <Section background="secondary" id="request">
    <div class="container">
      <div class="mx-auto max-w-2xl">
        <div class="text-center mb-8">
          <h2 class="text-3xl md:text-4xl font-semibold mb-4 text-[var(--text-secondary)] dark:text-white">
            Request talent or a delivery pod
          </h2>
          <p class="text-lg text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">
            Share your priorities and our solutions team will respond within one business day.
          </p>
        </div>
        <Card>
          <form name="talent-request" method="POST" action="https://formspree.io/f/YOUR_FORM_ID" class="space-y-6">
            <input type="hidden" name="form-name" value="talent-request" />

            <div>
              <label for="companyName" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Company Name *
              </label>
              <input
                type="text"
                id="companyName"
                name="companyName"
                required
                class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              />
            </div>

            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
              <div>
                <label for="contactName" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                  Contact Name *
                </label>
                <input
                  type="text"
                  id="contactName"
                  name="contactName"
                  required
                  class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
                />
              </div>
              <div>
                <label for="contactEmail" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                  Email Address *
                </label>
                <input
                  type="email"
                  id="contactEmail"
                  name="contactEmail"
                  required
                  class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
                />
              </div>
            </div>

            <div>
              <label for="phone" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Phone Number *
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              />
            </div>

            <div>
              <label for="jobTitle" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Role / Pod requirement *
              </label>
              <input
                type="text"
                id="jobTitle"
                name="jobTitle"
                required
                placeholder="e.g., Payments product squad (5 engineers, 2 QA), CX pod for US time zone"
                class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              />
            </div>

            <div>
              <label for="jobType" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Engagement model *
              </label>
              <select
                id="jobType"
                name="jobType"
                required
                class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              >
                <option value="">Select engagement</option>
                <option value="managed-pod">Managed pod / outcome-based</option>
                <option value="embedded-squad">Embedded squad / team augmentation</option>
                <option value="staffing">Contract or permanent staffing</option>
                <option value="bot">Build-operate-transfer</option>
              </select>
            </div>

            <div>
              <label for="requiredSkills" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Skills & domain focus *
              </label>
              <input
                type="text"
                id="requiredSkills"
                name="requiredSkills"
                required
                placeholder="e.g., React, Node.js, AWS | Healthcare CX | Finance & accounting BPM"
                class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              />
            </div>

            <div>
              <label for="timeline" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Timeline / urgency *
              </label>
              <select
                id="timeline"
                name="timeline"
                required
                class="w-full rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              >
                <option value="">Select timeline</option>
                <option value="immediate">Immediate (1-2 weeks)</option>
                <option value="urgent">Urgent (2-4 weeks)</option>
                <option value="normal">Normal (1-2 months)</option>
                <option value="flexible">Flexible</option>
              </select>
            </div>

            <div>
              <label for="requirements" class="block text-sm font-semibold mb-2 text-[var(--text-secondary)] dark:text-[var(--text-secondary)]">
                Additional context *
              </label>
              <textarea
                id="requirements"
                name="requirements"
                rows="5"
                required
                placeholder="Describe current challenges, success metrics, preferred tools, shift coverage, location preferences, etc."
                class="w-full resize-none rounded-lg border border-[var(--border)] bg-white px-4 py-3 text-[var(--text-secondary)] focus:border-[var(--secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--secondary)]/60 dark:border-[var(--border)]/40 dark:bg-[var(--bg)] dark:text-white"
              ></textarea>
            </div>

            <Button type="submit" variant="primary" size="lg" class="w-full">
              Submit Request
            </Button>
          </form>
        </Card>
      </div>
    </div>
  </Section>
</BaseLayout>
