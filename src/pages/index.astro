---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import ServiceCard from '../components/ServiceCard.astro';
import StatCard from '../components/StatCard.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import Icon from '../components/Icon.astro';
---

<BaseLayout title="A2Z Digital Workforce — Integrated IT, BPO & Staffing Solutions">
  <!-- Hero Section -->
  <Hero
    title="Build high-performing IT, BPO & staffing operations with one partner"
    subtitle="We design digital delivery engines that blend agile engineering, BPM excellence, and on-demand talent. From cloud-native builds to 24/7 CX pods, A2Z Digital Workforce orchestrates the teams, tools, and governance you need to scale."
    primaryCTA={{ text: "Co-create your operating model", href: "/clients" }}
    secondaryCTA={{ text: "Explore career tracks", href: "/candidates" }}
  />

  <!-- Integrated Capabilities -->
  <Section>
    <div class="container">
      <div class="mx-auto mb-14 max-w-3xl text-center">
        <span class="inline-flex items-center gap-2 rounded-full bg-[rgba(29,78,216,0.08)] px-4 py-2 text-xs font-semibold uppercase tracking-[0.3em] text-[var(--primary)]">
          Operating model blueprint
        </span>
        <h2 class="mt-6 text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)]">
          Integrated capabilities engineered for digital enterprises
        </h2>
        <p class="mt-4 text-lg text-[var(--text-muted)]">
          We connect talent, technology, and process excellence to run modern IT and BPM ecosystems that flex with demand.
        </p>
      </div>
      <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
        <Card class="h-full">
          <div class="inline-flex items-center gap-3 rounded-xl bg-[rgba(29,78,216,0.08)] p-3 text-[var(--primary)]">
            <Icon name="computer" class="w-7 h-7" />
            <span class="text-sm font-semibold uppercase tracking-wide text-[var(--primary)]">Digital Engineering</span>
          </div>
          <h3 class="mt-6 text-2xl font-semibold text-[var(--text-secondary)]">
            Modern IT & product delivery
          </h3>
          <ul class="mt-5 space-y-3 text-sm text-[var(--text-muted)]">
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Cloud-native builds, DevOps & managed SRE pods
            </li>
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Platform modernization & product engineering accelerators
            </li>
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Data, analytics, and AI-ready talent communities
            </li>
          </ul>
        </Card>
        <Card class="h-full">
          <div class="inline-flex items-center gap-3 rounded-xl bg-[rgba(20,184,166,0.12)] p-3 text-[var(--accent)]">
            <Icon name="document" class="w-7 h-7" />
            <span class="text-sm font-semibold uppercase tracking-wide text-[var(--accent)]">BPO & CX</span>
          </div>
          <h3 class="mt-6 text-2xl font-semibold text-[var(--text-secondary)]">
            Experience & back-office operations
          </h3>
          <ul class="mt-5 space-y-3 text-sm text-[var(--text-muted)]">
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              24/7 omnichannel support desks with quality governance
            </li>
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Finance, procurement, and knowledge process pods
            </li>
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              CX analytics and continuous improvement playbooks
            </li>
          </ul>
        </Card>
        <Card class="h-full">
          <div class="inline-flex items-center gap-3 rounded-xl bg-[rgba(14,165,233,0.12)] p-3 text-[var(--secondary)]">
            <Icon name="users" class="w-7 h-7" />
            <span class="text-sm font-semibold uppercase tracking-wide text-[var(--secondary)]">Staffing & RPO</span>
          </div>
          <h3 class="mt-6 text-2xl font-semibold text-[var(--text-secondary)]">
            Talent ecosystems on demand
          </h3>
          <ul class="mt-5 space-y-3 text-sm text-[var(--text-muted)]">
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Strategic workforce planning & niche leadership hiring
            </li>
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Contract-to-hire, project-based, and BOT staffing models
            </li>
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Employer branding, onboarding, and retention accelerators
            </li>
          </ul>
        </Card>
      </div>
    </div>
  </Section>

  <!-- Signature Services -->
  <Section background="secondary">
    <div class="container">
      <div class="mx-auto mb-12 max-w-3xl text-center">
        <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)] dark:text-white">
          Signature services across the IT, BPO & staffing lifecycle
        </h2>
        <p class="mt-4 text-lg text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">
          Modular offerings that plug into your roadmap—launch fast with our accelerators or scale long-term with managed pods.
        </p>
      </div>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        <ServiceCard
          title="Digital engineering squads"
          description="Full-stack, mobile, and platform engineers aligned to agile product delivery with baked-in DevSecOps."
          icon="rocket"
        />
        <ServiceCard
          title="Cloud & platform reliability"
          description="Site reliability, automation, and 24/7 monitoring teams safeguarding mission-critical platforms."
          icon="computer"
        />
        <ServiceCard
          title="CX and support operations"
          description="Omnichannel customer care, technical support desks, and knowledge management backed by QA frameworks."
          icon="users"
        />
        <ServiceCard
          title="Finance & back-office BPM"
          description="Finance, procurement, HR, and data processing pods with lean automation and SLA governance."
          icon="document"
        />
        <ServiceCard
          title="Recruitment process outsourcing"
          description="RPO pods embedded with your TA team delivering sourcing, assessments, analytics, and employer branding."
          icon="briefcase"
        />
        <ServiceCard
          title="Leadership & niche hiring"
          description="Executive search, niche technology hiring, and advisory on talent strategy for hyper-growth functions."
          icon="target"
        />
      </div>
    </div>
  </Section>

  <!-- Stats Section -->
  <Section>
    <div class="container">
      <div class="mx-auto mb-10 max-w-2xl text-center">
        <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)]">
          Delivery that scales with your transformation agenda
        </h2>
      </div>
      <div class="grid grid-cols-2 gap-6 md:grid-cols-4">
        <StatCard
          number="900+"
          label="IT & BPM specialists in network"
          icon="users"
        />
        <StatCard
          number="6"
          label="Global delivery & partner hubs"
          icon="map-pin"
        />
        <StatCard
          number="1.5M+"
          label="Support hours managed annually"
          icon="clock"
        />
        <StatCard
          number="98%"
          label="Client retention across 3 years"
          icon="star"
        />
      </div>
    </div>
  </Section>

  <!-- Engagement Methodology -->
  <Section>
    <div class="container">
      <div class="mx-auto mb-12 max-w-3xl text-center">
        <span class="inline-flex items-center gap-2 rounded-full bg-[rgba(14,165,233,0.12)] px-4 py-2 text-xs font-semibold uppercase tracking-[0.3em] text-[var(--secondary)]">
          Engagement methodology
        </span>
        <h2 class="mt-6 text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)]">
          Partnership designed around measurable outcomes
        </h2>
      </div>
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
        {[
          { step: '01', title: 'Discover & align', desc: 'Map business objectives, process baselines, and readiness for change with our solution architects.' },
          { step: '02', title: 'Design & launch', desc: 'Stand up cross-functional pods, secure SMEs, and integrate toolchains within 4-6 weeks.' },
          { step: '03', title: 'Deliver & optimize', desc: 'Run agile sprints, BPM playbooks, and staffing fulfilment with granular KPIs and governance.' },
          { step: '04', title: 'Scale & transform', desc: 'Co-own automation, analytics, and continuous improvement roadmaps for sustained impact.' },
        ].map(({ step, title, desc }) => (
          <Card class="h-full">
            <div class="inline-flex items-center rounded-full bg-[rgba(29,78,216,0.12)] px-3 py-1 text-xs font-semibold uppercase tracking-[0.4em] text-[var(--primary)]">
              {step}
            </div>
            <h3 class="mt-4 text-xl font-semibold text-[var(--text-secondary)] dark:text-white">{title}</h3>
            <p class="mt-3 text-sm text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">{desc}</p>
          </Card>
        ))}
      </div>
    </div>
  </Section>

  <!-- Testimonials Section -->
  <Section background="secondary">
    <div class="container">
      <div class="mx-auto mb-12 max-w-3xl text-center">
        <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)] dark:text-white">
          Trusted by technology leaders, BPM directors, and talent teams
        </h2>
        <p class="mt-4 text-lg text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">
          Our blended delivery model helps organizations modernize platforms, elevate customer journeys, and hire the right teams faster.
        </p>
      </div>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        <TestimonialCard
          name="Rajesh Kumar"
          role="CTO"
          company="TechCorp India"
          content="A2Z delivered a blended team of product engineers, DevOps, and QA that accelerated our SaaS roadmap by 3 quarters while maintaining enterprise-grade governance."
          rating={5}
        />
        <TestimonialCard
          name="Priya Sharma"
          role="Director of Talent Acquisition"
          company="Global Solutions"
          content="Their embedded RPO pod modernized our hiring operations, improved time-to-fill by 48%, and delivered analytics we now use for workforce planning."
          rating={5}
        />
        <TestimonialCard
          name="Amit Patel"
          role="Head of BPM Operations"
          company="FinServe"
          content="The CX pods stood up by A2Z improved our NPS within two quarters and gave us the flexibility to support seasonal spikes without downtime."
          rating={5}
        />
      </div>
    </div>
  </Section>

  <!-- CTA Section -->
  <Section background="gradient">
    <div class="container text-center">
      <h2 class="text-3xl md:text-4xl font-semibold mb-4 text-white">
        Ready to modernize your IT, BPO, or staffing operations?
      </h2>
      <p class="text-xl mb-8 text-white/90 max-w-2xl mx-auto">
        Let’s assemble the right mix of talent, process, and technology accelerators to meet your next set of growth targets.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/clients" variant="primary" size="lg" class="bg-white text-[var(--primary)] hover:bg-white/90">
          Schedule a consultation
        </Button>
        <Button href="/jobs" variant="outline" size="lg" class="border-white text-white hover:bg-white/10">
          Join our talent network
        </Button>
      </div>
    </div>
  </Section>
</BaseLayout>
