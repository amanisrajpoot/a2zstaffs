---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import ServiceCard from '../components/ServiceCard.astro';
import StatCard from '../components/StatCard.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import Icon from '../components/Icon.astro';
---

<BaseLayout title="A2Z Digital Workforce — Technology Services & Talent Solutions">
  <!-- Hero Section -->
  <Hero
    title="Shape adaptive technology services and talent programs with one partner"
    subtitle="We assemble cross-functional squads, managed operations, and emerging products that keep your digital roadmap moving. From product builds to always-on experience hubs, A2Z Digital Workforce orchestrates the teams, tools, and guardrails you need to grow."
    primaryCTA={{ text: "Design your next program", href: "/clients" }}
    secondaryCTA={{ text: "Join our talent collective", href: "/candidates" }}
  />

  <!-- Integrated Capabilities -->
  <Section>
    <div class="container">
      <div class="mx-auto mb-14 max-w-3xl text-center">
        <span class="inline-flex items-center gap-2 rounded-full bg-[rgba(29,78,216,0.08)] px-4 py-2 text-xs font-semibold uppercase tracking-[0.3em] text-[var(--primary)]">
          Capability matrix
        </span>
        <h2 class="mt-6 text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)]">
          Integrated capabilities tailored for modern delivery
        </h2>
        <p class="mt-4 text-lg text-[var(--text-muted)]">
          We connect talent, technology services, managed operations, and product accelerators so your delivery engine flexes with demand.
        </p>
      </div>
      <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
        <Card class="h-full">
          <div class="inline-flex items-center gap-3 rounded-xl bg-[rgba(29,78,216,0.08)] p-3 text-[var(--primary)]">
            <Icon name="computer" class="w-7 h-7" />
            <span class="text-sm font-semibold uppercase tracking-wide text-[var(--primary)]">Product & Platform</span>
          </div>
          <h3 class="mt-6 text-2xl font-semibold text-[var(--text-secondary)]">
            Modern product delivery
          </h3>
          <ul class="mt-5 space-y-3 text-sm text-[var(--text-muted)]">
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Cloud-native builds, DevOps, and reliability pods ready to embed
            </li>
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Platform modernization with reusable product engineering accelerators
            </li>
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Data, analytics, and AI guilds aligned to your domain needs
            </li>
          </ul>
        </Card>
        <Card class="h-full">
          <div class="inline-flex items-center gap-3 rounded-xl bg-[rgba(20,184,166,0.12)] p-3 text-[var(--accent)]">
            <Icon name="document" class="w-7 h-7" />
            <span class="text-sm font-semibold uppercase tracking-wide text-[var(--accent)]">Experience Operations</span>
          </div>
          <h3 class="mt-6 text-2xl font-semibold text-[var(--text-secondary)]">
            Customer & business operations
          </h3>
          <ul class="mt-5 space-y-3 text-sm text-[var(--text-muted)]">
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Always-on omnichannel support desks with measurable CX guardrails
            </li>
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Revenue, finance, and knowledge ops squads with automation-first playbooks
            </li>
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Journey analytics and continuous improvement programs fueled by data
            </li>
          </ul>
        </Card>
        <Card class="h-full">
          <div class="inline-flex items-center gap-3 rounded-xl bg-[rgba(14,165,233,0.12)] p-3 text-[var(--secondary)]">
            <Icon name="users" class="w-7 h-7" />
            <span class="text-sm font-semibold uppercase tracking-wide text-[var(--secondary)]">Talent Programs</span>
          </div>
          <h3 class="mt-6 text-2xl font-semibold text-[var(--text-secondary)]">
            Workforce ecosystems on demand
          </h3>
          <ul class="mt-5 space-y-3 text-sm text-[var(--text-muted)]">
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Strategic workforce design, leadership search, and succession planning
            </li>
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Project, managed, and build-operate-transfer models with shared accountability
            </li>
            <li class="flex items-start gap-2">
              <Icon name="check" class="mt-0.5 h-4 w-4 text-[var(--secondary)]" />
              Employer branding, onboarding, and retention accelerators ready to deploy
            </li>
          </ul>
        </Card>
      </div>
    </div>
  </Section>

    <!-- Signature Services -->
    <Section background="secondary">
      <div class="container">
        <div class="mx-auto mb-12 max-w-3xl text-center">
          <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)] dark:text-white">
            Signature programs across the services and talent lifecycle
          </h2>
          <p class="mt-4 text-lg text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">
            Modular offerings drop into your roadmap in weeks—launch with our ready-made accelerators, scale with managed pods, and tap upcoming in-house products when you’re ready.
          </p>
        </div>
        <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
          <ServiceCard
            title="Product & platform squads"
            description="Full-stack, mobile, and platform engineers aligned to agile delivery with DevSecOps embedded from day one."
            icon="rocket"
          />
          <ServiceCard
            title="Cloud reliability guilds"
            description="Site reliability, automation, and observability teams safeguarding mission-critical platforms around the clock."
            icon="computer"
          />
          <ServiceCard
            title="Customer experience operations"
            description="Omnichannel care, technical support, and knowledge programs anchored in measurable quality frameworks."
            icon="users"
          />
          <ServiceCard
            title="Business enablement offices"
            description="Finance, procurement, HR, and analytics pods operating with automation, controls, and shared KPIs."
            icon="document"
          />
          <ServiceCard
            title="Recruitment programs on demand"
            description="Embedded talent pods delivering sourcing, assessments, analytics, and employer branding as a managed service."
            icon="briefcase"
          />
          <ServiceCard
            title="Leadership & specialist hiring"
            description="Executive search, niche technology hiring, and workforce strategy advisory for high-growth teams."
            icon="target"
          />
        </div>
      </div>
    </Section>

    <!-- Stats Section -->
    <Section>
      <div class="container">
        <div class="mx-auto mb-10 max-w-2xl text-center">
          <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)]">
            Delivery that scales with your transformation agenda
          </h2>
        </div>
        <div class="grid grid-cols-2 gap-6 md:grid-cols-4">
          <StatCard
            number="900+"
            label="Specialists in our delivery network"
            icon="users"
          />
          <StatCard
            number="6"
            label="Global delivery & partner hubs"
            icon="map-pin"
          />
          <StatCard
            number="1.5M+"
            label="Support hours managed annually"
            icon="clock"
          />
          <StatCard
            number="98%"
            label="Client retention across 3 years"
            icon="star"
          />
        </div>
      </div>
    </Section>

  <!-- Engagement Methodology -->
  <Section>
    <div class="container">
      <div class="mx-auto mb-12 max-w-3xl text-center">
        <span class="inline-flex items-center gap-2 rounded-full bg-[rgba(14,165,233,0.12)] px-4 py-2 text-xs font-semibold uppercase tracking-[0.3em] text-[var(--secondary)]">
          Engagement methodology
        </span>
        <h2 class="mt-6 text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)]">
          Partnership designed around measurable outcomes
        </h2>
      </div>
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
        {[
          { step: '01', title: 'Discover & align', desc: 'Map business objectives, process baselines, and readiness for change with our solution architects.' },
          { step: '02', title: 'Design & launch', desc: 'Stand up cross-functional pods, secure SMEs, and integrate toolchains within 4-6 weeks.' },
            { step: '03', title: 'Deliver & optimize', desc: 'Run agile sprints, operations playbooks, and staffing fulfilment with granular KPIs and governance.' },
          { step: '04', title: 'Scale & transform', desc: 'Co-own automation, analytics, and continuous improvement roadmaps for sustained impact.' },
        ].map(({ step, title, desc }) => (
          <Card class="h-full">
            <div class="inline-flex items-center rounded-full bg-[rgba(29,78,216,0.12)] px-3 py-1 text-xs font-semibold uppercase tracking-[0.4em] text-[var(--primary)]">
              {step}
            </div>
            <h3 class="mt-4 text-xl font-semibold text-[var(--text-secondary)] dark:text-white">{title}</h3>
            <p class="mt-3 text-sm text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">{desc}</p>
          </Card>
        ))}
      </div>
    </div>
  </Section>

  <!-- Testimonials Section -->
  <Section background="secondary">
    <div class="container">
        <div class="mx-auto mb-12 max-w-3xl text-center">
          <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-[var(--text-secondary)] dark:text-white">
            Trusted by technology, operations, and talent leaders
          </h2>
          <p class="mt-4 text-lg text-[var(--text-muted)] dark:text-[var(--text-secondary)]/80">
            Our blended delivery model helps organizations modernize platforms, elevate customer journeys, and hire the right teams faster.
          </p>
      </div>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        <TestimonialCard
          name="Rajesh Kumar"
          role="CTO"
          company="TechCorp India"
          content="A2Z delivered a blended team of product engineers, DevOps, and QA that accelerated our SaaS roadmap by 3 quarters while maintaining enterprise-grade governance."
          rating={5}
        />
        <TestimonialCard
          name="Priya Sharma"
          role="Director of Talent Acquisition"
          company="Global Solutions"
          content="Their embedded RPO pod modernized our hiring operations, improved time-to-fill by 48%, and delivered analytics we now use for workforce planning."
          rating={5}
        />
          <TestimonialCard
            name="Amit Patel"
            role="Head of Operations"
            company="FinServe"
            content="The CX pods stood up by A2Z improved our NPS within two quarters and gave us the flexibility to support seasonal spikes without downtime."
            rating={5}
          />
      </div>
    </div>
  </Section>

  <!-- CTA Section -->
  <Section background="gradient">
    <div class="container text-center">
        <h2 class="text-3xl md:text-4xl font-semibold mb-4 text-white">
          Ready to modernize your delivery engine?
        </h2>
        <p class="text-xl mb-8 text-white/90 max-w-2xl mx-auto">
          Let’s assemble the right mix of services, talent, and in-house accelerators to meet your next set of growth targets.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/clients" variant="contrast" size="lg">
            Schedule a consultation
          </Button>
          <Button href="/jobs" variant="soft" size="lg">
            Join our talent network
          </Button>
        </div>
    </div>
  </Section>
</BaseLayout>
