---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
  class?: string;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  type = 'button',
  class: className = '',
} = Astro.props;

const baseClasses =
  'inline-flex items-center justify-center font-semibold rounded-xl transition-all duration-300 hover:translate-y-[-1px] active:translate-y-0 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[var(--secondary)]';
const variantClasses = {
  primary:
    'bg-[var(--primary)] text-white shadow-[var(--shadow-sm)] hover:bg-[var(--primary-dark)] hover:shadow-[var(--shadow-md)]',
  secondary:
    'bg-[var(--secondary)] text-white shadow-[var(--shadow-sm)] hover:bg-[var(--secondary-dark)] hover:shadow-[var(--shadow-md)]',
  outline:
    'border-2 border-[var(--primary)] text-[var(--primary)] hover:bg-[rgba(29,78,216,0.08)] dark:border-[var(--primary-light)] dark:text-[var(--primary-light)] dark:hover:bg-[rgba(96,165,250,0.08)]',
  ghost:
    'text-[var(--primary)] hover:text-[var(--primary-dark)] hover:bg-[rgba(29,78,216,0.08)] dark:text-[var(--primary-light)] dark:hover:text-white dark:hover:bg-[rgba(59,130,246,0.08)]',
};
const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
