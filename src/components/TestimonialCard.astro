---
import Card from './Card.astro';

interface Props {
  name: string;
  role: string;
  company?: string;
  content: string;
  rating?: number;
}

const { name, role, company, content, rating = 5 } = Astro.props;
---

<Card class="h-full">
  {rating > 0 && (
    <div class="flex gap-1 mb-4 text-yellow-400">
      {Array.from({ length: rating }).map(() => (
        <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
    </div>
  )}
  <p class="text-gray-700 dark:text-gray-300 mb-6 italic">
    "{content}"
  </p>
  <div class="border-t border-gray-200 dark:border-slate-700 pt-4">
    <div class="font-semibold text-gray-900 dark:text-white">{name}</div>
    <div class="text-sm text-gray-600 dark:text-gray-400">
      {role}{company && ` at ${company}`}
    </div>
  </div>
</Card>

