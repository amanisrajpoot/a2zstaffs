---
interface Props {
  class?: string;
  background?: 'default' | 'secondary' | 'gradient';
}

const {
  class: className = '',
  background = 'default',
} = Astro.props;

const backgroundClasses = {
  default: 'relative bg-[var(--bg-elevated)] dark:bg-[var(--bg)]',
  secondary: 'relative bg-[var(--bg-secondary)] dark:bg-[var(--bg-tertiary)]',
  gradient: 'relative overflow-hidden text-white',
};
---

<section class={`section ${backgroundClasses[background]} ${className}`}>
  {background === 'gradient' && (
    <>
      <div class="absolute inset-0 -z-20 opacity-90" style="background: var(--gradient-primary);"></div>
      <div class="absolute inset-0 -z-10 opacity-60 blur-3xl" style="background: var(--gradient-hero);"></div>
      <div class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_80%_20%,rgba(255,255,255,0.25)_0,rgba(255,255,255,0)_55%)]"></div>
    </>
  )}
  <div class={background === 'gradient' ? 'relative z-10' : ''}>
    <slot />
  </div>
</section>

