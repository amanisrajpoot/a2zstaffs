---
import ThemeToggle from './ThemeToggle.astro';
import Button from './Button.astro';

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/services', label: 'Solutions' },
  { href: '/clients', label: 'For Clients' },
  { href: '/candidates', label: 'Talent Network' },
];

const normalizePath = (path: string) => {
  if (path.length > 1 && path.endsWith('/')) {
    return path.slice(0, -1);
  }
  return path;
};

const currentPath = normalizePath(Astro.url.pathname);
const isActive = (href: string) => {
  const normalizedHref = normalizePath(href);
  if (normalizedHref === '/') {
    return currentPath === '/';
  }
  return currentPath === normalizedHref || currentPath.startsWith(`${normalizedHref}/`);
};
---

<header class="sticky top-0 z-50">
  <div class="border-b border-[var(--border)]/60 backdrop-blur-xl bg-[var(--glass-light)] dark:bg-[var(--glass-dark)]">
    <nav class="container">
      <div class="flex items-center justify-between h-16 lg:h-20">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3 group">
          <div class="w-12 h-12 rounded-2xl bg-[var(--gradient-primary)] flex items-center justify-center text-white font-extrabold text-lg shadow-[var(--shadow-sm)] group-hover:shadow-[var(--shadow-md)] transition-shadow">
            A2Z
          </div>
            <div class="flex flex-col leading-tight">
              <span class="text-xl lg:text-2xl font-extrabold tracking-[-0.01em] text-[var(--text-secondary)] dark:text-white drop-shadow-sm">
                Digital Workforce
              </span>
              <span class="text-[0.75rem] lg:text-xs uppercase tracking-[0.35em] text-[var(--text-muted)] group-hover:text-[var(--primary)] transition-colors">
                Advisory • Talent • Platforms
              </span>
            </div>
        </a>

          <!-- Desktop Navigation -->
          <div class="hidden lg:flex items-center gap-1">
            <nav class="flex items-center gap-1 mr-4">
              {navItems.map((item) => {
                const active = isActive(item.href);
                return (
                  <a
                    href={item.href}
                    aria-current={active ? 'page' : undefined}
                    class:list={[
                      'px-4 py-2 rounded-xl text-sm font-medium transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--primary)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--bg-elevated)]',
                      active
                        ? 'text-[var(--primary)] bg-[var(--nav-item-active)] shadow-[var(--shadow-sm)]'
                        : 'text-[var(--text-secondary)] hover:text-[var(--primary)] hover:bg-[var(--nav-item-hover)]',
                    ]}
                  >
                    {item.label}
                  </a>
                );
              })}
            </nav>
            <ThemeToggle />
            <Button href="/contact" variant="primary" size="sm" class="ml-3">
              Let's Talk
            </Button>
          </div>

        <!-- Mobile Menu Button -->
        <div class="lg:hidden flex items-center gap-3">
          <ThemeToggle />
          <button
            id="mobile-menu-button"
            class="p-2 rounded-xl text-[var(--text-muted)] dark:text-[var(--text-secondary)] hover:bg-[rgba(29,78,216,0.08)] dark:hover:bg-[rgba(59,130,246,0.2)] transition-colors"
            aria-label="Toggle menu"
          >
            <svg id="menu-icon" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg id="close-icon" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </nav>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden lg:hidden border-t border-[var(--border)]/60 pb-4">
        <nav class="flex flex-col gap-1 pt-4">
          {navItems.map((item) => {
            const active = isActive(item.href);
            return (
              <a
                href={item.href}
                aria-current={active ? 'page' : undefined}
                class:list={[
                  'px-4 py-3 rounded-xl text-base font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--primary)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--bg-elevated)]',
                  active
                    ? 'text-[var(--primary)] bg-[var(--nav-item-active)] shadow-[var(--shadow-sm)]'
                    : 'text-[var(--text-secondary)] hover:text-[var(--primary)] hover:bg-[var(--nav-item-hover)]',
                ]}
              >
                {item.label}
              </a>
            );
          })}
          <a
            href="/contact"
            class="px-4 py-3 rounded-xl text-base font-medium text-[var(--text-secondary)] hover:text-[var(--primary)] hover:bg-[var(--nav-item-hover)] transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--primary)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--bg-elevated)]"
          >
            Contact
          </a>
          <div class="px-4 pt-2">
            <Button href="/contact" variant="primary" size="md" class="w-full">
              Get Started
            </Button>
          </div>
        </nav>
      </div>
  </div>
</header>

<script>
  (function () {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        menuIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');
      });
    }
  })();
</script>
