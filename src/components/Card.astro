---
interface Props {
  class?: string;
  hover?: boolean;
}

const {
  class: className = '',
  hover = true,
} = Astro.props;

const baseClasses =
  'bg-[var(--bg-elevated)] dark:bg-[var(--bg)] rounded-2xl border border-[var(--border)]/70 dark:border-[var(--border)]/30 p-6 shadow-[var(--shadow-sm)] transition-all duration-300';
const hoverClasses = hover ? 'hover:shadow-[var(--shadow-md)] hover:-translate-y-1' : '';
---

<div class={`${baseClasses} ${hoverClasses} ${className}`}>
  <slot />
</div>

