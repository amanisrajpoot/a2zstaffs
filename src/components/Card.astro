---
interface Props {
  class?: string;
  hover?: boolean;
}

const {
  class: className = '',
  hover = true,
} = Astro.props;

const baseClasses = 'bg-white dark:bg-slate-800 rounded-xl border border-gray-200 dark:border-slate-700 p-6 transition-all duration-200';
const hoverClasses = hover ? 'hover:shadow-lg hover:-translate-y-1' : '';
---

<div class={`${baseClasses} ${hoverClasses} ${className}`}>
  <slot />
</div>

