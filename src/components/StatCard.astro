---
import Card from './Card.astro';
import Icon from './Icon.astro';

interface Props {
  number: string;
  label: string;
  icon?: string;
}

const { number, label, icon } = Astro.props;
---

<Card class="text-center">
  {icon && (
    <div class="mb-4 text-indigo-600 dark:text-indigo-400 flex justify-center">
      <Icon name={icon} class="w-8 h-8" />
    </div>
  )}
  <div class="text-4xl md:text-5xl font-bold text-indigo-600 dark:text-indigo-400 mb-2">
    {number}
  </div>
  <div class="text-gray-600 dark:text-gray-300 text-lg">
    {label}
  </div>
</Card>
