---
import Card from './Card.astro';
import Icon from './Icon.astro';

interface Props {
  title: string;
  description: string;
  icon?: string;
  href?: string;
}

const { title, description, icon, href } = Astro.props;
---

<Card class="h-full">
  {icon && (
    <div class="mb-4 text-indigo-600 dark:text-indigo-400">
      <Icon name={icon} class="w-10 h-10" />
    </div>
  )}
  <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">
    {title}
  </h3>
  <p class="text-gray-600 dark:text-gray-300 mb-4">
    {description}
  </p>
  {href && (
    <a href={href} class="text-indigo-600 dark:text-indigo-400 font-semibold hover:text-indigo-800 dark:hover:text-indigo-200 hover:underline inline-flex items-center gap-2 transition-colors">
      Learn more
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  )}
</Card>
