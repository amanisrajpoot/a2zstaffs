---
import Card from './Card.astro';
import Icon from './Icon.astro';

interface Props {
  title: string;
  description: string;
  icon?: string;
  href?: string;
}

const { title, description, icon, href } = Astro.props;
---

<Card class="h-full">
  {icon && (
    <div class="mb-4 inline-flex items-center justify-center rounded-xl bg-[rgba(14,165,233,0.12)] text-[var(--secondary)] p-3">
      <Icon name={icon} class="w-8 h-8" />
    </div>
  )}
  <h3 class="text-xl font-semibold mb-3 text-[var(--text-secondary)] dark:text-white">
    {title}
  </h3>
  <p class="text-[var(--text-muted)] dark:text-[var(--text-secondary)] dark:opacity-80 mb-5">
    {description}
  </p>
  {href && (
    <a
      href={href}
      class="text-[var(--primary)] font-semibold hover:text-[var(--primary-dark)] inline-flex items-center gap-2 transition-colors"
    >
      Learn more
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  )}
</Card>
